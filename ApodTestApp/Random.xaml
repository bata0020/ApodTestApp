<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApodTestApp.Random"
             Title="Random">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Select A Number Between 1 And 100" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"/>
        
        <Slider x:Name="randomSlider" Margin="10" Value="1" Minimum="1" Maximum="100"
                    ValueChanged="randomSlider_ValueChanged" WidthRequest="300"/>
        
        <Label x:Name="sliderValue" Text="1" HorizontalOptions="Center" VerticalOptions="Center"/>

        <Button x:Name="goRandomButton" Text="Go Random" WidthRequest="150" Margin="20" 
                Clicked="goRandomButton_Clicked"/>

    </VerticalStackLayout>

</ContentPage>