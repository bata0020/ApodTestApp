<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApodTestApp.RangeOfDates"
             Title="RangeOfDates">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Select A Range of Dates" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"/>

        <Label Text="Start Date" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"/>
        
        <DatePicker x:Name="dateRangeStart" VerticalOptions="Center" HorizontalOptions="Center" 
                        FontSize="Medium"/>

        <Label Text="End Date" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"/>
        
        <DatePicker x:Name="dateRangeEnd" VerticalOptions="Center" HorizontalOptions="Center" 
                        FontSize="Medium"/>

        <Button x:Name="dateRangeButton" Text="Go" WidthRequest="150" Margin="20" 
                 Clicked="dateRangeButton_Clicked"/>
        
    </VerticalStackLayout>

</ContentPage>