<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApodTestApp.Calendar"
             Title="Calendar">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        
        <Label Text="Select A Date" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"/>
        
        <DatePicker x:Name="pickDate" VerticalOptions="Center" HorizontalOptions="Center" 
                        FontSize="Medium"/>

        <Button x:Name="pickDateButton" Text="Go" WidthRequest="150" Margin="20" 
                 Clicked="pickDateButton_Clicked"/>
        
    </VerticalStackLayout>
    
</ContentPage>